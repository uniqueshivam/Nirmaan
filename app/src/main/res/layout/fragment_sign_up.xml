<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bapps.saisathvik.nirmaan.Fragment.SignUpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/purplematerialbackground">

                    <View
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circular_btn_shape"
                        android:id="@+id/view" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/acc_dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/boss" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@+id/acc_dp"
                        android:layout_alignRight="@+id/acc_dp"
                        android:background="@drawable/circular_btn_shape" />

                    <ImageView
                        android:id="@+id/choose"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_alignBottom="@+id/acc_dp"
                        android:layout_alignRight="@+id/acc_dp"
                        android:src="@drawable/ic_create_pen"
                        android:tint="#616161" />



                </RelativeLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/profile_layout"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="50dp">

                    <LinearLayout
                        android:id="@+id/acc_email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_email_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/mailcontractor"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/id_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:hint="Email"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/acc_company_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_company_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/stationery"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/id_comapany_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:hint="Company Name"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acc_contractor_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_contractor_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/menwillbemen"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/id_agency_owner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:hint="Agency Owner"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acc_Pasword_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_Pasword_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/responsive"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/id_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:passwordToggleEnabled="true"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acc_phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_phone_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/smartphone"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/id_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:hint="Phone Number"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:passwordToggleEnabled="true"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"
                            />




                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/acc_id_contractor_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_idContractor_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/id_card"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/id_agency_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:hint="Agency ID"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:passwordToggleEnabled="true"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acc_id_agency_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_iContractor_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/mapsandflags"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/id_agency_areas_served"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:hint="Areas served"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:passwordToggleEnabled="true"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acc_id_agencyi_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/acc_iContractoir_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/mapsandflags"
                            />

                        <TextView
                            android:id="@+id/id_agency_areas_servied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"

                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wages_id_skilled_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wages_skilled_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/wagesforskilled"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/wagesforskilled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:hint="Wages for Skilled"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:passwordToggleEnabled="true"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"

                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/wages_id_semiskilled_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wages_semiskilled_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/wagesforsemiskilled"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/wagesforsemiskilled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:hint="Wages for Semi Skilled"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:textColorHint="#424242"
                            android:textColor="#424242"
                            app:met_baseColor="#424242"
                            app:passwordToggleEnabled="true"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#424242"
                            app:met_singleLineEllipsis="true"

                            />

                    </LinearLayout>


                    <Button
                        android:id="@+id/id_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="sign Up"
                        android:background="#5E35B1"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>



                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>