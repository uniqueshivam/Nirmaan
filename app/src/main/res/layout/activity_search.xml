<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bapps.saisathvik.nirmaan.SearchActivity">


    <LinearLayout
        android:id="@+id/acc_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/google_maps"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@drawable/radio_on_button" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/id_agencysearch_id"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:hint="Search here"
            android:textSize="18sp"
            android:textColorHint="#424242"
            android:textColor="#424242"
            app:met_baseColor="#424242"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#424242"
            app:met_singleLineEllipsis="true"
            />

        <ImageView
            android:id="@+id/search_img_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@drawable/searchagency"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/demo"
            android:textSize="20dp"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dashboard_search_agencylist"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"


        />


</LinearLayout>
